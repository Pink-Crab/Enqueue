{
    "name": "pinkcrab/enqueue",
    "type": "library",
    "description": "A fluent API for enqueuing WordPress Scripts and Styles.",
    "keywords": [],
    "homepage": "https://pinkcrab.co.uk",
    "license": "MIT",
    "authors": [{
        "name": "Glynn Quelch",
        "email": "glynn@pinkcrab.co.uk",
        "homepage": "http://clappo.co.uk",
        "role": "Developer"
    }],
    "autoload": {
        "psr-4": {
            "PinkCrab\\Enqueue\\": "src"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "PinkCrab\\Enqueue\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0",
        "phpstan/phpstan": "^1.0",
        "szepeviktor/phpstan-wordpress": "^1.0",
        "php-stubs/wordpress-stubs": "^6.0 || ^5.9",
        "roots/wordpress": "^6.0",
        "wp-phpunit/wp-phpunit": "^6.0",
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "wp-coding-standards/wpcs": "*",
        "object-calisthenics/phpcs-calisthenics-rules": "*",
        "yoast/phpunit-polyfills": "^0.2.0 || ^1.0.0",
        "symfony/var-dumper": "4.*",
        "pinkcrab/wp-rest-schema": "dev-master",
        "gin0115/wpunit-helpers": "~1.0.0 || ~1.1.0",
        "symfony/css-selector": "*",
        "symfony/dom-crawler": "*",
        "pinkcrab/function-constructors": "*"
    },
    "require": {
        "php": ">=7.1.0"
    },
    "scripts": {
        "test": "phpunit --coverage-clover clover.xml --testdox",
        "coverage": "phpunit --coverage-html coverage-report --testdox",
        "analyse": "vendor/bin/phpstan analyse src -l8",
        "sniff": "./vendor/bin/phpcs src/ -v",
        "all": "composer test && composer analyse && composer sniff"
    },
    "config": {
        "allow-plugins": {
            "roots/wordpress-core-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
